<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mNestedMainLayout"
        style="@style/i1_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/visitor_name_list"
                style="@style/i1_text_view_visitor_list_adapter"
                android:layout_weight="1"
                android:text="Saurabh" />

            <TextView
                android:id="@+id/visitor_company_list"
                style="@style/i1_text_view_visitor_list_adapter"
                android:layout_weight="1"
                android:text="Google" />

            <TextView
                android:id="@+id/visitor_mobile_list"
                style="@style/i1_text_view_visitor_list_adapter"
                android:layout_weight="1"
                android:text="8147403554" />
            <TextView
                android:id="@+id/visitor_email_list"
                style="@style/i1_text_view_visitor_list_adapter"
                android:layout_weight="1"
                android:text="saurabh.kumar021@gmail.com" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
